<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="jp.gr.java_conf.kk.dao.entity">
    <class name="AccountRole" table="account_role">
        <meta attribute="class-description">
Entity class for account role table

@author Koichi Kitamura
@version 1.0.0 2018/03/03
        </meta>
        <id name="accountRoleId"
            type="integer"
            column="account_role_id">
            <meta attribute="field-description">account role ID (automatically generated)</meta>
            <meta attribute="scope-set">protected</meta>
            <generator class="identity" /> <!-- "SERIAL" type for PostgreSQL -->
        </id>
        <property name="name"
                  type="text"
                  column="name"
                  not-null="true"
                  unique="true">
            <meta attribute="field-description">name</meta>
        </property>
        <property name="createDate"
                  type="timestamp"
                  column="create_date"
                  not-null="true">
            <meta attribute="field-description">create date</meta>
            <meta attribute="scope-set">protected</meta>
        </property>
        <property name="updateDate"
                  type="timestamp"
                  column="update_date"
                  not-null="true">
            <meta attribute="field-description">update date</meta>
            <meta attribute="scope-set">protected</meta>
        </property>
    </class>
</hibernate-mapping>